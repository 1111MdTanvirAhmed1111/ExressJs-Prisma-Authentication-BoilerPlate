{
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "next/core-web-vitals",
      "plugin:prettier/recommended"
    ],
    "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
      "no-console": "warn",
      "eqeqeq": "error",
      "curly": "error",
      "quotes": ["error", "single"],
      "semi": ["error", "always"]
    }
  }